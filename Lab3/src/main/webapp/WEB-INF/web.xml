<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>AddExamServlet</servlet-name>
        <servlet-class>com.example.lab3.AddExamServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AddExamServlet</servlet-name>
        <url-pattern>/addexam</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AddStudentServlet</servlet-name>
        <servlet-class>com.example.lab3.AddStudentServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AddStudentServlet</servlet-name>
        <url-pattern>/addstudent</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>PlanificationServlet</servlet-name>
        <servlet-class>com.example.lab3.PlanificationServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>PlanificationServlet</servlet-name>
        <url-pattern>/planification</url-pattern>
    </servlet-mapping>

</web-app>